@model List<WarehouseLocation>

<a asp-action="Create" class="btn btn-primary mb-2">Tambah Lokasi</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Kode Lokasi</th>
        
            <th>Gudang</th>
            <th width="125">Aksi</th>
        </tr>
    </thead>

    <tbody>
    @foreach (var l in Model)
    {
        <tr>
            <td>@l.LocationCode</td>
            
            <td>@l.WarehouseName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@l.LocationId"
                   class="btn btn-warning btn-sm">Edit</a>

                <a asp-action="Delete" asp-route-id="@l.LocationId"
                   onclick="return confirm('Hapus lokasi ini?')"
                   class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
