@using System.Data
@model DataTable

<h3>Goods Receipt</h3>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>PO Number</th>
            <th>Item</th>
            <th>Qty PO</th>
            <th>Received</th>
            <th>Outstanding</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["PONumber"]</td>
                <td>@row["ItemName"]</td>
                <td>@row["POQty"]</td>
                <td>@row["ReceivedQty"]</td>
                <td class="text-danger fw-bold">@row["OutstandingQty"]</td>
                <td>
                    <button class="btn btn-success btn-sm"
                            onclick="openGRModal(
                        @row["PODetailId"],
                        '@row["PONumber"]',
                        '@row["ItemName"]',
                        @row["OutstandingQty"]
                    )">
                        Receipt
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="modal fade" id="grModal">
    <div class="modal-dialog">
        <form method="post" asp-action="Create" class="modal-content">

            <div class="modal-header">
                <h5>Preview Goods Receipt</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="PODetailId" id="PODetailId" />

                <div class="mb-2">
                    <label>PO Number</label>
                    <input type="text" id="PONumber" class="form-control" readonly />
                </div>

                <div class="mb-2">
                    <label>Item</label>
                    <input type="text" id="ItemName" class="form-control" readonly />
                </div>

                <div class="mb-2">
                    <label>Qty Receipt</label>
                    <input type="number" name="Qty" id="Qty"
                           class="form-control" min="1" required />
                </div>

                <div class="mb-2">
                    <label>Warehouse</label>
                    <select name="WarehouseId" class="form-control">
                        @foreach (DataRow w in ViewBag.Warehouses.Rows)
                        {
                            <option value="@w["WarehouseId"]">@w["WarehouseName"]</option>
                        }
                    </select>
                </div>

                <div class="mb-2">
                    <label>Location</label>
                    <select name="LocationId" class="form-control">
                        @foreach (DataRow l in ViewBag.Locations.Rows)
                        {
                            <option value="@l["LocationId"]">@l["LocationCode"]</option>
                        }
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary">Simpan Receipt</button>
            </div>

        </form>
    </div>
</div>
<script>
    function openGRModal(poDetailId, poNumber, itemName, outstanding) {

        $("#PODetailId").val(poDetailId);
        $("#PONumber").val(poNumber);
        $("#ItemName").val(itemName);
        $("#Qty").val(outstanding);

        new bootstrap.Modal(
            document.getElementById('grModal')
        ).show();
    }
</script>
