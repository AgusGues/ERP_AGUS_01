@using System.Data
@model DataTable

<h4>All Outstanding</h4>

<form asp-action="OutstandingDetailAll" method="get" class="mb-3">
    <div class="input-group">
        <input type="text"
               name="keyword"
               value="@ViewBag.Keyword"
               class="form-control"
               placeholder="Cari Nomor PO" />
        <button class="btn btn-primary" type="submit">Search</button>
        <a asp-action="OutstandingDetailAll" class="btn btn-secondary">Reset</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            
            <th>PO Number</th>
            <th>Supplier Name</th>
            <th>PO Date</th>
            <th>Item Name</th>
            <th>PO Qty</th>
            <th>Received Qty</th>
            <th>Outstanding</th>
        </tr>
    </thead>
    <tbody>

        @foreach (DataRow r in Model.Rows)
        {
            <tr>

                <td>@r["PONumber"]</td>
                <td>@r["SupplierName"]</td>
                <td>@Convert.ToDateTime(@r["PODate"]).ToString("dd/MM/yyyy")</td>
                <td>@r["ItemName"]</td>
                <td>@r["POQty"]</td>
                <td class="text-end fw-bold text-info">@r["ReceivedQty"]</td>
                <td class="text-end fw-bold text-danger">@r["OutstandingQty"]</td>

            </tr>
        }

    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Kembali</a>